<%- include('navbar.ejs') %>

<style>
  /* Small page-specific styles to complement Bootstrap */
  .auth-page {
    min-height: calc(100vh - 130px); /* account for navbar/footer height */
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 40px 0;
  }
  .auth-card {
    max-width: 420px;
    width: 100%;
    border: 0;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    overflow: hidden;
  }
  .auth-card .card-body {
    padding: 2rem;
  }
  .auth-title {
    font-weight: 600;
    margin-bottom: 0.75rem;
  }
  .form-help {
    font-size: 0.9rem;
  }
</style>

<main class="auth-page">
  <div class="card auth-card">
    <div class="card-body">
      <h3 class="auth-title text-center">Login to Job Portal</h3>
      <p class="text-center text-muted form-help">Enter your account details to continue</p>

      <form action="/login_process" method="POST" class="mt-4">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Your password" required>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="remember">
            <label class="form-check-label" for="remember">Remember me</label>
          </div>
          <a href="#" class="text-decoration-none">Forgot?</a>
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        <div class="text-center mt-3">
          <span class="text-muted">Don't have an account?</span>
          <a href="/register" class="ms-2">Register</a>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('footer.ejs') %>